<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_net_bar"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#FEEAE5">

    <ImageView
        android:id="@+id/iv_net_warn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:src="@drawable/btn_no_net_warn"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_net_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@id/iv_net_warn"
        android:layout_toRightOf="@id/iv_net_warn"
        android:text="@string/net_warn_content"
        android:textColor="#666666"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/icon_arrow_next" />

</RelativeLayout>