<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/shape_theme_red_normal" android:state_checked="false" />
    <item android:drawable="@drawable/shape_theme_red_checked" android:state_checked="true" />

</selector>

    <!--
            state_enabled 控件是否可用
            state_checked 控件是否被勾选
            state_selected 控件是否被点击
            state_pressed 控件是否触摸
            state_focus   控件是否聚焦

        -->